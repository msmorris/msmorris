<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Home</th>
      <th>About</th>
      <th>Portfolio</th>
      <th>Blog</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.home %></td>
        <td><%= page.about %></td>
        <td><%= page.portfolio %></td>
        <td><%= page.blog %></td>
        <td><%= page.contact %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
